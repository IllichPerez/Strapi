{
  "kind": "collectionType",
  "collectionName": "churches",
  "info": {
    "singularName": "church",
    "pluralName": "churches",
    "displayName": "churches",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "members": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "belongs_to_the_church"
    },
    "invitation_id": {
      "type": "customField",
      "options": {
        "uuid-format": "^(?=.*\\d)(?=.*[a-zA-Z])[\\dA-Za-z]{4}-[a-zA-Z\\d]{3}-[\\dA-Za-z]{4}$"
      },
      "customField": "plugin::strapi-advanced-uuid.uuid"
    }
  }
}
